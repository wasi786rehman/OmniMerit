<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OmniMerit </title>
    <!-- Bootstrap -->
    
    <link href="~/PluginScripts/Css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animate.css -->
    
    <link href="~/PluginScripts/Css/animate.min.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    
    <link href="~/PluginScripts/Css/custom.min.css" rel="stylesheet" />
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    
@using (Html.BeginForm("Login", "Portal", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
{
    @Html.AntiForgeryToken()
                        <h1>Login</h1>
                       
                        <div>
                            <input type="text" class="form-control" placeholder="Username" required name="User_Id"  />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Password" required name="User_Password"/>
                        </div>
                        <div>
                            <button type="submit" id="submitbtn" class="btn btn-success">Log In</button>
                            @*@Html.ActionLink("Log In", "index", new { Controller = "Admin/index" }, new { @class = "btn btn-default submit" })*@
                            <a class="reset_pass" href="#">Forget password?</a>
                        </div>
                        <span style="color:red;">@ViewBag.Message</span>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <p class="change_link">
                                New to site?
                                <a href="#signup" class="to_register"> Create Account </a>
                            </p>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><i></i> OmniMerit</h1>
                                <p>©2017 All Rights Reserved. OmniMerit</p>
                            </div>
                        </div>
                    
}
                </section>
            </div>
            <div id="register" class="animate form registration_form">
                <section class="login_content">
                    <form>
                        <h1>Create Account</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="Username" required="" />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Email" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Password" required="" />
                        </div>
                        <div>
                            <a class="btn btn-default submit" href="index.html">Submit</a>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <p class="change_link">
                                Already a member ?
                                <a href="#signin" class="to_register"> Log in </a>
                            </p>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><i></i> OmniMerit</h1>
                                <p>©2017 All Rights Reserved. OmniMerit</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>
</html>
